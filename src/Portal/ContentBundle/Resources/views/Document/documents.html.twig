{% extends isDepartment ? 'PortalContentBundle::depBase.html.twig' : 'PortalContentBundle::innerPageBase.html.twig' %}

{% block title %}
    {{ 'document.title'|trans }} | {{ parent() }}
{% endblock %}

{% block headerPanel %}
    {{ panelWidget.renderPanel('header-panel', 'document_all_page')|raw }}
{% endblock %}

{% block sideBar %}
    {{ panelWidget.renderPanel('side-panel', 'document_all_page')|raw }}
{% endblock %}

{% block beforeContentBlock %}
    {{ panelWidget.renderPanel('before-content-panel', 'document_all_page')|raw }}
{% endblock %}

{% block bottomPanel %}
    {{ panelWidget.renderPanel('bottom-panel', 'document_all_page')|raw }}
{% endblock %}

{% block footerSocialPanel %}
    {{ panelWidget.renderPanel('footer-panel', 'document_all_page')|raw }}
{% endblock %}

{% block innerContent %}
    <div class="tabs-content__white">
        <div class="title">{{ 'docs'|trans }}</div>
        {{ searchForm()|raw }}
        <div class="text-page">
            <div id="document_content">
                {% include 'PortalContentBundle:Document:docItem.html.twig' %}
            </div>
        </div>
        {#{% if pageCount > 1 %}#}
        <button id="get_more_document" class="download" {{ hideButton is defined and hideButton ? 'style="display: none"' : ''}}
                data-pagecount="{{ pageCount }}" data-page="{{ currentPage }}">
            {{ 'show_more'|trans }}
        </button>
        {#{% endif %}#}
        <div class="pagination clearfix">{{ pagination|raw }}</div>
    </div>
{% endblock %}
