<div class="text-page">
    {% for item in items %}
        <div class="text-page__inform-block">
            <div class="text-page__content text-page__content_document">
                <div class="text-page__document">
                    <a href="{{ asset(item.previewFileUrl) }}" title="{{ 'click_to_view'|trans() }}">
                        {{ item.title }}
                    </a>
                </div>
                <div class="text-page__doc-link">
                     {% if item.createdAt is defined %}
                        <a href="#" class="text-page__doc-date">
                            {{ item.createdAt|date('d.m.Y') }}
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
</div>
