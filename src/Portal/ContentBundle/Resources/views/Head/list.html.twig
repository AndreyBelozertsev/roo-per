{% extends 'PortalContentBundle::depBase.html.twig' %}

{% block title %}
    {{ 'head_form.menu_title'|trans() }} | {{ 'portal'|trans() }}
{% endblock %}

{% block headerPanel %}
    {{ panelWidget.renderPanel('header-panel', 'head_all_page')|raw }}
{% endblock %}

{% block sideBar %}
{#    {{parent()}}#}
    {{ panelWidget.renderPanel('side-panel', 'head_all_page')|raw }}
{% endblock %}
{#{% block sideBar %}{{parent()}}{% endblock %}#}

{% block beforeContentBlock %}
    {{ panelWidget.renderPanel('before-content-panel', 'head_all_page')|raw }}
{% endblock %}

{% block bottomPanel %}
    {{ panelWidget.renderPanel('bottom-panel', 'head_all_page')|raw }}
{% endblock %}

{% block footerSocialPanel %}
    {{ panelWidget.renderPanel('footer-panel', 'head_all_page')|raw }}
{% endblock %}

{% block innerContent %}
    <div class="tabs-content__white">
        <div class="title _sample">{{ 'head_form.menu_title'|trans() }}</div>
        <div class="text-page">
            {% if headList is not empty %}
                {% include 'PortalContentBundle:Head:headItem.html.twig' %}
            {% else %}
                <div class="text-page__inform-block">{{ 'head_form.no_head'|trans() }}</div>
            {% endif %}
        </div>
    </div>
{% endblock %}
