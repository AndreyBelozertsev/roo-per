{% extends 'PortalAdminBundle::adminBase.html.twig' %}

{% block title %}
    {{ parent() }} | {{ 'typo_report.title'|trans }}
{% endblock %}

{% block pageheader %}
    {{ 'typo_report.title'|trans }}
{% endblock %}

{% block topbuttons %}{% endblock %}

{% block body %}
    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th>{{ 'typo_report.text'|trans }}</th>
                <th>{{ 'comment'|trans }}</th>
                <th>{{ 'typo_report.link'|trans }}</th>
                <th>{{ 'action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for typoReport in pagerFanta.currentPageResults %}
            <tr>
                <td>{{ typoReport.typo|raw }}</td>
                <td>{{ typoReport.comment }}</td>
                <td>
                    <a href="{{ typoReport.url }}" target="_blank">{{ typoReport.url }}</a>
                </td>
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="pagerfanta">
        {{ pagerfanta(pagerFanta, 'twitter_bootstrap3') }}
    </div>
{% endblock %}
