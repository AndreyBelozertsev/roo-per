{% extends 'PortalAdminBundle::adminBase.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block title %}{{ parent() }} | {{ 'system_mode_form.system_mode_list'|trans }}{% endblock %}
{% block pageheader %}{{ 'system_mode_form.system_mode_list'|trans }}{% endblock %}

{% block topbuttons %}{% endblock %}

{% block body %}
        <table class="table table-striped table-middle-aligned">
            <thead>
                <tr>
                    <th>{{ 'system_mode_form.code'|trans }}</th>
                    <th>{{ 'action'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for systemMode in pagerFanta.currentPageResults %}
                    <tr>
                        <td><a class="" href="{{ path('admin_admin_system_mode_edit', { 'id': systemMode.system_mode_id }) }}">{{ systemMode.system_mode_code }}</a></td>
                        <td>
                            <a href="{{ path('admin_admin_system_mode_edit', { 'id': systemMode.system_mode_id }) }}" class="btn btn-sm btn-primary ">
                                <i class="glyphicon glyphicon-edit"></i> {{ 'edit'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="pagerfanta">
            {{ pagerfanta(pagerFanta, 'twitter_bootstrap3') }}
        </div>
{% endblock %}
