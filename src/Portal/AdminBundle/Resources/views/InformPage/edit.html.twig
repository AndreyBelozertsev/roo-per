{% extends 'PortalAdminBundle::adminBase.html.twig' %}

{% block pageheader %}{{ 'inform_page.edit'|trans }}{% endblock %}

{% block topbuttons %}
    <a class="btn btn-success back-to-list" href="{{ path('admin_instance_inform_page_list', {'instanceCode':instanceCode}) }}">
        <i class="glyphicon glyphicon-repeat"></i> {{ 'come_back'|trans }}
    </a>
    <a class="btn btn-success" href="{{ path('admin_instance_inform_page_create', {'instanceCode':instanceCode}) }}">
        <i class="glyphicon glyphicon-plus-sign"></i> {{ 'add_new'|trans }}
    </a>
    <a class="btn btn-warning" onclick="adminPage.informPage.removeItem({{ page.id }}, '{{ instanceCode }}');">
        <i class="glyphicon glyphicon-trash"></i> {{ 'delete'|trans }}
    </a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
    <script src="{{ asset('bundles/portaladmin/script/slug-form/slug-form.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/portaladmin/css/slug.css') }}" media="screen" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
    <div class="page-form-wrp">
        {% include 'PortalAdminBundle:InformPage:editTemplateForm.html.twig' %}
    </div>
{% endblock %}
