{% extends 'PortalAdminBundle::adminBase.html.twig' %}

{% block title %}
    {{ parent() }} | {{ 'interview_form.action_create'|trans }}
{% endblock %}

{% block pageheader %}
    {{ 'interview_form.action_create'|trans }}
{% endblock %}

{% block topbuttons %}
    <a class="btn btn-success" href="{{ path('admin_instance_interview_list', {'instanceCode': instanceCode}) }}"><i class="glyphicon glyphicon-repeat"></i>
        {{ 'come_back'|trans }}
    </a>
    <a class="btn btn-success" href="{{ path("admin_instance_interview_form_create", {'instanceCode': instanceCode}) }}"><i class="glyphicon glyphicon-plus-sign"></i>
        {{ 'interview_form.add_new'|trans }}
    </a>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <div id="form-body" class="clearfix" data-action="create">
            {% include 'PortalAdminBundle:InterviewAdmin:interviewForm.html.twig' %}
            <div class="form-group">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-9">
                    <div id="btn_interview" class="form-actions">
                        <button id="btn_create_interview" class="btn btn-success" type="submit" name="btn_create_interview" >
                            <i class="glyphicon glyphicon-floppy-disk"></i> {{ 'save'|trans }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/portaladmin/script/interview-form/interview-embed-form.js') }}"></script>
{% endblock %}

