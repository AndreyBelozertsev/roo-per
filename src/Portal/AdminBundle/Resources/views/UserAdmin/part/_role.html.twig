<div class="user-role-form row">
    <div class="form-group">
        <div class="col-sm-3">
            {{ form_label(roleForm.role, '', {'label_attr': {'class': 'control-label'} }) }}
        </div>
        <div class="col-sm-9">
            {{ form_widget(roleForm.role, {'attr':{'class':'form-control'} }) }}
            <div class="errors">
                {% for error in roleForm.role.vars.errors %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endfor %}
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="form-group">
        <div class="col-sm-3">
            {{ form_label(roleForm.instance, '', {'label_attr': {'class': 'control-label'} }) }}
        </div>
        <div class="col-sm-9">
            {{ form_widget(roleForm.instance, {'attr':{'class':'form-control'} }) }}
            <div class="errors">
                {% for error in roleForm.instance.vars.errors %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endfor %}
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="form-group">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-9">
            {{ form_widget(roleForm.removeRole, {'attr':{'class':'btn btn-success remove-role'} }) }}
            {{ form_widget(roleForm.id) }}
        </div>
        <div class="clearfix"></div>
    </div>
</div>