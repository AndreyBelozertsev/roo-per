        <div class="form-group">
            <div class="col-sm-3">
                {{ form_label(form.label) }}
            </div>
            <div class="col-sm-9">
                {{ form_widget(form.label, {'attr':{'class':'form-control'} }) }}
                <div class="errors">
                    {% for error in form.label.vars.errors %}
                        <div class="alert alert-danger">{{ error.message }}</div>
                    {% endfor %}
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
