{% block body %}
    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th>{{ 'title'|trans }}</th>
            <th>{{ 'value'|trans }}</th>
            <th>{{ 'action'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for param in params %}
            <tr>
                <td>
                    <a href="{{ path('admin_admin_param_edit', { 'id': param.id }) }}">
                        {{ param.title }}
                    </a>
                </td>
                <td>{{ param.value }}</td>
                <td>
                    <a href="{{ path('admin_admin_param_edit', { 'id': param.id }) }}" class="btn btn-sm btn-primary">
                        <i class="glyphicon glyphicon-edit"></i> {{ 'edit'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
